#include<pic16f887>
#fuses INTRC_IO
#use delay(clock=8000000)
#include <lcd.c>
int num;
int num2;
int sum;

void main()
suma = num +num2;
   {
      lcd_init();
      set_tris_e(0xFF);
      SETUP_ADC_PORTS (sAN5);
      SET_ADC_CHANNEL(5);
      setup_adc(ADC_CLOCK_DIV_32);
      lcd_init();
      
      
      while (1)
     {
                  
        valorAnalogo = read_adc();
       sum = valorAnalogo + num2
        lcd_putc("\f");//limpiar la pantalla
        printf(lcd_putc,"%u+%u=%u",valorAnalogo,num2,sum);
  
        delay_ms(1000);
            
         }
   }
