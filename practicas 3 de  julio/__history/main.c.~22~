#include <16f887.h>
#fuses INTRC_IO
#use delay(clock=8000000)
#include <lcd.c>
#use rs232(baud=9600, parity=N, xmit=PIN_C6, rcv=PIN_C7, bits=8)

int i;
int valor;
int8 lee_microsw(void);
int leds;
int numero;
int x;
int resultado;


void main(void)
   {  
      
      lcd_init();
      
      while (1)
         {   
             lcd_putc("\f");
             printf(ldc_putc,"lee_microsw");
             delay_ms(1000);
         }
   }
   
     int8 lee_microsw(void)
{
      int8 entrada [8];
      int valor;
    
      
      entrada[0] = input(PIN_C0);
      entrada[1] = input(PIN_C1);
      entrada[2] = input(PIN_C2);
      entrada[3] = input(PIN_C3);
      entrada[4] = input(PIN_C4);
      entrada[5] = input(PIN_C5);
      entrada[6] = input(PIN_E1);
      entrada[7] = input(PIN_E2);
      
      valor = 0;
       for(i=0;i<8;i++)
{
        
         valor+= (entrada[i] << i);
       
}
     
      return valor;
      
}
  
   
